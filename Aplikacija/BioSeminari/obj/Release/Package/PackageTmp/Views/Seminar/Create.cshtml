@model MSDNRoles.Models.Seminar

@{
    ViewBag.Title = "Create";
}

<h2>Novi seminar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-2">
                <label>Naziv:</label>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Naziv, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Naziv, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <label>Opis:</label>
            </div>
            <div class="col-md-10">
                <textarea cols="20" class="form-control" id="Opis" name="Opis" rows="8"></textarea>
                @Html.ValidationMessageFor(model => model.Opis, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-2">
                <label>Datum:</label>
            </div>
            <div class="col-md-10">
                <input type="date" id="datum" class="form-control" onchange="setDate(e);">
                @Html.ValidationMessageFor(model => model.Datum, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kreiraj" class="btn btn-default" />
            </div>
        </div>

        <input type="hidden" name="Datum" id="stvarnoDatum" />
    </div>
}

<div>
    @Html.ActionLink("Vrati na listu", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


